<properties xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:oxf="http://www.orbeon.com/oxf/processors">
  <!-- The value here, prefixed with 'jdbc/', is what the JNDI datasource in META-INF/context.xml must be named. -->
  <property as="xs:string" name="oxf.fr.persistence.provider.*.*.*" value="postgresql"/> 
  <property as="xs:string" name="oxf.fr.detail.button.pdf.visible.*.*" value="false"/>
  <property as="xs:string" name="oxf.fr.detail.button.summary.visible.*.*" value="false"/>
  <property as="xs:string" name="oxf.fr.detail.button.clear.visible.*.*" value="false"/>
  <property as="xs:string" name="oxf.fr.detail.button.review.visible.*.*" value="false"/>
  <!-- This allows RESTful service calls to be made from anywhere. Note that, like the app itself, this has no auth. -->
  <property as="xs:string" processor-name="oxf:page-flow" name="service-public-methods" value="GET HEAD POST PUT DELETE"/>
  <!-- Set UK date format.
       See https://doc.orbeon.com/configuration/properties/xforms.html#for-xfinput -->
  <property as="xs:string" name="oxf.xforms.format.input.date" value="[D01]/[M01]/[Y]"/>
  <!-- 
  Error message dialog has been removed from this process, so it is not shown on validation errs. 
  Custom process to scroll to top on validation errors has been added.
  -->
  <property as="xs:string"  name="oxf.fr.detail.process.require-valid.*.*">
    visit-all
    then captcha
    then validate("error")
    recover (
      visit-all 
      then expand-all 
      then process("scroll-to-top") 
      then success
    )
  </property>
  <!-- Custom process used to scroll to top on validation errors. -->
  <property as="xs:string"  name="oxf.fr.detail.process.scroll-to-top.*.*">
    navigate(uri = "javascript:document.getElementById('error-summary-control-top').scrollIntoView()")
  </property>
  <!-- Show the top error summary (options are top, bottom, both; default is bottom) -->
  <property as="xs:string"  name="oxf.fr.detail.error-summary.*.*">top</property>
  <!-- Add a custom mapping for the namespace used by custom components -->
  <property as="xs:string" name="oxf.xforms.xbl.mapping.cta">http://www.certus-tech.com/xbl</property>
</properties>
